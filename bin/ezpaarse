#!/bin/bash
#
# ezPAARSE start stop restart status script
#

# Move to the script directory
cd "$(dirname "${BASH_SOURCE[0]:-$0}")/.."

# load ezpaarse env
source ./bin/env

DAEMON=true
for i in "$@"; do
  if [ $i == "--no-daemon" ]; then
    DAEMON=false
  fi
done

case $1 in

  start)
    if [ $DAEMON == false ]; then
      npm start
    else
      npm run pm2:startd
    fi
  ;;

  dev)
    npm run pm2:dev
  ;;

  stop)
    npm run pm2:stop
  ;;

  restart | reload | force-reload)
    npm run pm2:restart
  ;;

  status)
    npm run pm2:status
  ;;

  logs)
    npm run pm2:logs
  ;;

  monitor)
    npm run pm2:monitor
  ;;

  *)
    echo "Usage: $0 {start|stop|restart|status|dev|logs|monitor}"
    exit 1
  ;;

esac
